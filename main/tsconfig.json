{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "strict": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "allowJs": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "../dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": "."
  }
}
